<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWindowBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        card_view:cardBackgroundColor="@color/color_background_card"
                        card_view:cardCornerRadius="0dp"
                        card_view:cardElevation="0dp"
                        card_view:contentPadding="@dimen/keyline_medium"
                        card_view:cardUseCompatPadding="true">

                        <LinearLayout
                            android:id="@+id/info_atelier"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:foreground="?attr/selectableItemBackground"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginBottom="@dimen/keyline_small"
                                app:srcCompat="@drawable/atelier"
                                android:contentDescription="TODO" />

                            <View
                                android:layout_margin="@dimen/keyline_medium"
                                android:layout_width="fill_parent"
                                android:layout_height="1dp"
                                android:background="@color/colorWindowBackground" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/title_atelier" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        card_view:cardBackgroundColor="@color/color_background_card"
                        card_view:cardCornerRadius="0dp"
                        card_view:cardElevation="0dp"
                        card_view:contentPadding="@dimen/keyline_medium"
                        card_view:cardUseCompatPadding="true">

                        <LinearLayout
                            android:id="@+id/info_investment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:foreground="?attr/selectableItemBackground"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginBottom="@dimen/keyline_small"
                                app:srcCompat="@drawable/investment" />

                            <View
                                android:layout_margin="@dimen/keyline_medium"
                                android:layout_width="fill_parent"
                                android:layout_height="1dp"
                                android:background="@color/colorWindowBackground" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/title_atelier_investment" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        card_view:cardBackgroundColor="@color/color_background_card"
                        card_view:cardCornerRadius="0dp"
                        card_view:cardElevation="0dp"
                        card_view:contentPadding="@dimen/keyline_medium"
                        card_view:cardUseCompatPadding="true">

                        <LinearLayout
                            android:id="@+id/info_value_per_hour"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:foreground="?attr/selectableItemBackground"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginBottom="@dimen/keyline_small"
                                app:srcCompat="@drawable/calculate_value"
                                android:contentDescription="TODO" />

                            <View
                                android:layout_margin="@dimen/keyline_medium"
                                android:layout_width="fill_parent"
                                android:layout_height="1dp"
                                android:background="@color/colorWindowBackground" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/title_atelier_value_per_hour" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        card_view:cardBackgroundColor="@color/color_background_card"
                        card_view:cardCornerRadius="0dp"
                        card_view:cardElevation="0dp"
                        card_view:contentPadding="@dimen/keyline_medium"
                        card_view:cardUseCompatPadding="true">

                        <LinearLayout
                            android:id="@+id/info_fixed_spending"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:foreground="?attr/selectableItemBackground"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginBottom="@dimen/keyline_small"
                                app:srcCompat="@drawable/calculate_value"
                                android:contentDescription="TODO" />

                            <View
                                android:layout_margin="@dimen/keyline_medium"
                                android:layout_width="fill_parent"
                                android:layout_height="1dp"
                                android:background="@color/colorWindowBackground" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/title_fixed_expenses" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/keyline_medium">

            <TextView
                android:id="@+id/resume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="4"
                tools:text="Resume" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>